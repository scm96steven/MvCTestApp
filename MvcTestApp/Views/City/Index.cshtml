@model IEnumerable<MvcTestApp.Models.ViewModel.CityViewModel>


@{
    ViewBag.Title = "Ciudades";
    Layout = "~/Views/Template/HomeTemplate.cshtml";
}




<div id="container">
    <h1>Ciudades de Puerto Rico y Republica dominicana</h1>
    <div id="menu">

        <ul class="nav nav-tabs">

            <div class="navbar-header">
                <a class="navbar-brand" href="#"><strong>Menu de Ciudades</strong></a>
            </div>
            <li class="active"> @Html.ActionLink("Ver todas", "Index")</li>
            <li> @Html.ActionLink("Busqueda", "Search")</li>



        </ul>
    </div>

    <div id="content">
        <br />


        <div class="row">
            <div class="col-sm-4">

                <form method="POST" action="/City/SelectAndQueryDatabase">
                    <fieldset>
                        <legend><strong>Listar todas las ciudades de:</strong></legend>
                        <div class="radio">
                            <label><input type="radio" name="dbValue" value="RD" class="active" />Republica Dominicana</label>
                        </div>
                        <div class="radio">
                            <label><input type="radio" name="dbValue" value="PR" />Puerto Rico</label>
                        </div>
                        <br />
                        <input type="submit" name="btnEnviar" value="Buscar ciudades" /><br /><br />
                    </fieldset>
                </form>
            </div>
            <div class="col-sm-8">
                @if (Model != null)
                {
                    <div class="col-sm-4">
                        <table class="table table-stripped">
                            <tr>
                                <td scope="col">
                                    <strong>Nombre de la ciudad</strong>

                                </td>

                                <td scope="col">
                                    <strong> Codigo de la ciudad</strong>
                                </td>

                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.city_code)
                                    </td>

                                </tr>


                            }
                        </table>
                    </div>
                }
            </div>
        </div>

        <br /><br />





    </div>



</div>


